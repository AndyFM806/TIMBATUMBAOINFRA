pipeline {
    agent none

    environment {
        AWS_DEFAULT_REGION = 'us-east-1'
        TF_IN_AUTOMATION   = 'true'
    }

    stages {

        stage('Checkout') {
            agent { label 'terraform' }
            steps {
                checkout scm
            }
        }

        stage('1. Linting y validación Terraform') {
            agent { label 'terraform' }
            steps {
                dir('infra') {
                    sh '''
                        echo "[TF] Formateando y validando..."
                        terraform fmt -check
                        terraform validate
                    '''
                }
            }
        }

        stage('2. Checkov (seguridad IaC)') {
            agent { label 'docker' }   // agente que tiene Docker CLI
            steps {
                dir('infra') {
                    sh '''
                        echo "[Checkov] Escaneando IaC..."

                        # Descargar imagen (si ya está, solo verifica)
                        docker pull bridgecrew/checkov:3 || true

                        # Ejecutar Checkov montando la carpeta infra como /tf
                        docker run --rm \
                          -v "$PWD":/tf \
                          --workdir /tf \
                          bridgecrew/checkov:3 \
                          --directory /tf \
                          -o junitxml \
                          --output-file-path results.xml
                    '''

                    // Publicar reporte de Checkov como tests JUnit
                    junit 'results.xml'
                }
            }
        }

        stage('3. Test unitarios (Node)') {
            agent { label 'node' }
            steps {
                dir('App/frontend') {   // ruta de tu frontend en el repo
                    sh '''
                        npm install
                        npm test -- --unit
                    '''
                }
            }
        }

        stage('4. Terraform Plan (preview)') {
            agent { label 'terraform' }
            steps {
                withCredentials([
                    usernamePassword(
                        credentialsId: 'aws-credentials-00',
                        usernameVariable: 'AWS_ACCESS_KEY_ID',
                        passwordVariable: 'AWS_SECRET_ACCESS_KEY'
                    )
                ]) {
                    dir('infra') {
                        sh '''
                            echo "[TF] Init..."
                            terraform init -input=false

                            echo "[TF] Plan usando terraform.tfvars..."
                            terraform plan \
                              -var-file=dev.tfvars \
                              -out=tfplan
                        '''
                    }
                }
            }
        }

        stage('5. Aprobación manual') {
            when { branch 'main' }
            agent none
            steps {
                input message: '¿Aplicar cambios de Terraform en AWS con este plan?',
                      ok: 'Aplicar IaC'
            }
        }

        stage('6. Terraform Apply') {
            when { branch 'main' }
            agent { label 'terraform' }
            steps {
                withCredentials([
                    usernamePassword(
                        credentialsId: 'aws-credentials-00',
                        usernameVariable: 'AWS_ACCESS_KEY_ID',
                        passwordVariable: 'AWS_SECRET_ACCESS_KEY'
                    )
                ]) {
                    dir('infra') {
                        sh '''
                            echo "[TF] Aplicando plan tfplan..."
                            terraform apply -auto-approve tfplan 
                        '''
                    }
                }
            }
        }
    }

    post {
        success {
            echo 'Despliegue de infraestructura (IaC) completado exitosamente.'
        }
        failure {
            echo 'Error en el pipeline. Revisa la etapa fallida en Jenkins.'
        }
    }
}
