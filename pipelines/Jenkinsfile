pipeline {
    agent none

    environment {
        AWS_DEFAULT_REGION = 'us-east-1'
        TF_IN_AUTOMATION   = 'true'
        DOCKER_HOST        = 'tcp://dind:2375'
    }

    stages {

        stage('Checkout') {
            agent { label 'docker' }
            steps {
                checkout scm
            }
        }

        stage('1. Linting y validación Terraform') {
            agent { label 'terraform' }
            steps {
                dir('infra') {
                    sh '''
                        echo "[TF] Formateando y validando..."
                        terraform fmt -check
                        terraform validate
                    '''
                }
            }
        }

        stage('2. Checkov (seguridad IaC)') {
            agent { label 'docker' }
            steps {
                dir('infra') {
                    sh '''
                        echo "[Checkov] Escaneando IaC..."
                        docker run --rm \
                          -v "$PWD":/tf \
                          --workdir /tf \
                          bridgecrew/checkov:latest \
                          -d /tf -o junitxml --output-file-path /tf/results.xml
                    '''
                    junit 'infra/results.xml'
                }
            }
        }

        stage('3. Test unitarios (Node)') {
            agent { label 'node' }
            steps {
                dir('App/frontend') {
                    sh '''
                        npm install
                        npm test -- --unit || true
                    '''
                }
            }
        }

        stage('4. Terraform Plan (preview)') {
            agent { label 'terraform' }
            steps {
                withCredentials([
                    usernamePassword(
                        credentialsId: 'aws-credentials-00',
                        usernameVariable: 'AWS_ACCESS_KEY_ID',
                        passwordVariable: 'AWS_SECRET_ACCESS_KEY'
                    )
                ]) {
                    dir('infra') {
                        sh '''
                            echo "[TF] Init..."
                            terraform init -input=false

                            echo "[TF] Plan..."
                            terraform plan -var-file=dev.tfvars -out=tfplan
                        '''
                    }
                }
            }
        }

        stage('5. Aprobación manual') {
            agent none
            when { branch 'main' }
            steps {
                input message: '¿Aplicar cambios de Terraform?',
                      ok: 'Aplicar IaC'
            }
        }

        stage('6. Terraform Apply') {
            agent { label 'terraform' }
            when { branch 'main' }
            steps {
                withCredentials([
                    usernamePassword(
                        credentialsId: 'aws-credentials-00',
                        usernameVariable: 'AWS_ACCESS_KEY_ID',
                        passwordVariable: 'AWS_SECRET_ACCESS_KEY'
                    )
                ]) {
                    dir('infra') {
                        sh '''
                            echo "[TF] Applying..."
                            terraform apply -auto-approve tfplan
                        '''
                    }
                }
            }
        }
    }

    post {
        success {
            echo 'Despliegue de IaC completado.'
        }
        failure {
            echo 'Error en el pipeline.'
        }
    }
}
